---
import GithubIcon from "@/icons/footer/GithubIcon.astro";
import InstagramIcon from "@/icons/footer/InstagramIcon.astro";
import TwitterIcon from "@/icons/footer/TwitterIcon.astro";
import { useTranslations } from "@/i18n/utils";
import { languageList } from "@/i18n/lang";

const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);

const icons = [
    { Image: GithubIcon, href: "https://github.com/BanKinf/caawards", alt:"github-icon" },
    { Image: InstagramIcon, href: "https://www.instagram.com/caawards", alt:"instagram-icon" },
    { Image: TwitterIcon, href: "https://x.com/CAAwards", alt:"twitter-icon" },
];
---

<footer 
class="flex flex-col items-center pb-16 md:pb-12 pt-10 md:pt-5 gap-2 bg-[#141414] bg-opacity-80"
>
   <div class="flex gap-2">
      {icons.map(({ Image, href, alt }) => (
         <a href={href} target="_blank" rel="noopener noreferrer" class="hover-scale">
            <Image class="w-5" alt={alt} />
         </a>
      ))}
   </div>
   <div class="flex items-center gap-1 font-Inter text-xs">
      <h3>Coscu Army Awards | {translateLabels("footer.copyright")} Â© 2024</h3>
   </div>
</footer>